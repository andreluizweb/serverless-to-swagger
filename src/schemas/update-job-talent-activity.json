{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "userNotes": {
      "type": "string"
    },
    "statusReason": {
      "type": [
        "string",
        "null"
      ]
    },
    "mentionedUsers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "userId",
          "userName"
        ],
        "properties": {
          "userId": {
            "type": "string"
          },
          "userName": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
