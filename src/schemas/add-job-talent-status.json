{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "reason",
    "status"
  ],
  "properties": {
    "comment": {
      "type": "string"
    },
    "reason": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "declined",
        "rejected"
      ]
    }
  },
  "additionalProperties": false
}
